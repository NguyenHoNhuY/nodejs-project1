<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
  </head>
  <body>
    <%- include('../part/header')%>
    <div class="container mt-5">
      <table class="table table-dark table-striped">
        <tr>
          <th>Customer Name</th>
          <th>Old</th>
          <th>Edit by modal</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% for(let item of customers) { %>
        <tr>
          <td id="name<%= item._id %>"><%= item.name %></td>
          <td id="old<%= item._id %>"><%= item.old %></td>
          <td>
            <button
              type="submit"
              class="btn btn-primary editModal"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
              id="<%= item._id %>"
            >
              Edit by modal
            </button>
          </td>
          <td>
            <a href="/customer/edit/<%= item._id %> " class="btn btn-warning"
              >Edit</a
            >
          </td>
          <td>
            <form
              action="/customer/delete/<%= item._id %>?_method=DELETE"
              method="POST"
            >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
    <!-- Button trigger modal -->

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Customer</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form action="" method="POST" name="formEdit">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  placeholder="Customer Name"
                  name="name"
                  value=""
                />
                <label for="floatingInput">Customer Name</label>
              </div>
              <div class="form-floating">
                <input
                  type="text"
                  class="form-control"
                  id="old"
                  placeholder="Old"
                  name="old"
                  value=""
                />
                <label for="floatingPassword">Old</label>
              </div>
              <div class="form-floating mt-3">
                <input
                  type="submit"
                  value="Save"
                  id="floatingSubmit"
                  class="form-control btn btn-primary"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      const editModal = document.getElementsByClassName("editModal");
      for (let item of editModal) {
        item.addEventListener("click", function (e) {
          document.getElementById("name").value = document.getElementById(
            "name" + this.id
          ).innerHTML;
          document.getElementById("old").value = document.getElementById(
            "old" + this.id
          ).innerHTML;
          document.formEdit.action =
            "/customer/edit/" + this.id + "?_method=PUT";
        });
      }
    </script>
  </body>
</html>
